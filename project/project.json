{
    "server": {
        "src": "src/server.js",
        "out": "dist",
        "port": 3000
    },
    "api":{
        "src": {
            "js": "src/api/**/*.js",
            "tests": "src/api/**/*.spec.js"
        },
        "out": {
            "dist": "dist/api"
        }
    },
    "client": {
        "src": {
            "client": "src/client",
            "html": "src/client/**/*.html",
            "scss": "src/client/**/*.scss",
            "css": "src/client/**/*.css",
            "js": "src/client/**/*.js",
            "thirdparty": "src/client/bower_components",
            "tests": "src/client/**/*.spec.js"
        },
        "out": {
            "dist": "dist/client",
            "thirdpartydist": "dist/client/bower_components"
        }
    }
}